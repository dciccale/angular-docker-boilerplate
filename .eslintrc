{
  "env": {
    "browser": true,
    "node": true
  },

  "globals": {
    "angular": false,
    "$": false,

    // jasmine specific
    "jasmine": false,
    "beforeEach": false,
    "afterEach": false,
    "describe": false,
    "expect": false,
    "inject": false,
    "it": false,
    "module": false,
    "xdescribe": fale,
    "xit": false,
    "spyOn": false
  },

  "rules": {

    // Possible errors
    "no-cond-assign": 2,
    "no-console": 2,
    "no-constant-condition": 2,
    "no-comma-dangle": 2,
    "no-control-regex": 0,
    "no-debugger": 2,
    "no-dupe-keys": 2,
    "no-empty": 1,
    "no-empty-class": 2,
    "no-ex-assign": 2,
    "no-extra-boolean-cast": 2,
    "no-extra-parens": 0,
    "no-extra-semi": 2,
    "no-func-assign": 2,
    "no-invalid-regexp": 2,
    "no-negated-in-lhs": 2,
    "no-obj-calls": 2,
    "no-regex-spaces": 2,
    "no-sparse-arrays": 2,
    "no-unreachable": 2,
    "use-isnan": 2,
    "valid-typeof": 2,

    // Best practices
    "block-scoped-var": 0,
    "complexity": [1, 12],
    "consistent-return": 2,
    "curly": [2, "all"],
    "default-case": 2,
    "dot-notation": 1,
    "eqeqeq": 2,
    "guard-for-in": 2,
    "no-alert": 2,
    "no-caller": 2,
    "no-div-regex": 2,
    "no-else-return": 0,
    "no-empty-label": 2,
    "no-eq-null": 2,
    "no-eval": 2,
    "no-extend-native": 2,
    "no-fallthrough": 2,
    "no-floating-decimal": 2,
    "no-implied-eval": 2,
    "no-labels": 2,
    "no-iterator": 2,
    "no-lone-blocks": 2,
    "no-loop-func": 2,
    "no-multi-str": 2,
    "no-native-reassign": 2,
    "no-new": 2,
    "no-new-func": 1,
    "no-new-wrappers": 2,
    "no-octal": 2,
    "no-octal-escape": 2,
    "no-proto": 2,
    "no-redeclare": 2,
    "no-return-assign": 2,
    "no-script-url": 2,
    "no-self-compare": 2,
    "no-sequences": 2,
    "no-unused-expressions": 2,
    "no-warning-comments": [0, { "terms": ["todo", "fixme"], "location": "anywhere" }],
    "no-with": 2,
    "radix": 2,
    "wrap-iife": [2, "outside"],
    "yoda": 2,
    "no-irregular-whitespace": 0,

    // Strict mode
    "no-extra-strict": 2,
    "strict": 2,

    // Variables
    "no-catch-shadow": 2,
    "no-delete-var": 2,
    "no-label-var": 2,
    "no-shadow": 2,
    "no-shadow-restricted-names": 2,
    "no-undef": 2,
    "no-undefined": 0,
    "no-undef-init":  2,
    "no-unused-vars": 2,
    "no-use-before-define": 0,

    // Node.js
    "handle-callback-err": 2,
    "no-mixed-requires": 2,
    "no-new-require": 2,
    "no-path-concat": 2,
    "no-process-exit": 0,
    "no-sync": 2,

    // Stylistic issues
    "brace-style": "1tbs",
    "camelcase": 0,
    "consistent-this": [2, "that"],
    "eol-last": 0,
    "func-names": 0,
    "func-style": 0,
    "new-cap": 2,
    "new-parens": 2,
    "no-array-constructor": 2,
    "no-lonely-if": 0,
    "no-new-object": 2,
    "no-spaced-func": 2,
    "no-space-before-semi": 2,
    "no-trailing-spaces": 2,
    "no-underscore-dangle": 0,
    "no-wrap-func": 2,
    "no-mixed-spaces-and-tabs": 2,
    "quotes": [2, "single", "avoid escape"],
    "semi": 2,
    "space-after-keywords": [2, "always"],
    "space-in-brackets": [2, "never"],
    "space-infix-ops": 2,
    "space-return-throw-case": 2,
    "max-nested-callbacks": [2, 8],
    "wrap-regex": 2,

    // Legacy
    "max-depth": [2, 8],
    "max-len": [1, 120, 2],
    "max-params": [1, 10]
  }
}
